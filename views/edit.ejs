<%- include('layout/header');%>
<div class="container">
  <h2>Update User Details</h2>
  <form action="/doUpdateData/<%= userData[0].id%>" method="post">
    <div class="form-group">
      <label for="email">Name:</label>
      <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name" value="<%= userData[0].name %>">
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" value="<%= userData[0].email %>">
    </div>
    <div class="form-group">
      <label for="pwd">Phone Number:</label>
      <input type="text" class="form-control" id="phone_no" placeholder="Enter Phone Number" name="phone_no" value="<%= userData[0].phone_no %>">
    </div>
    <div class="form-group">
      <label for="pwd">Address:</label>
      <textarea name="address" rows="4" class="form-control"><%= userData[0].address %></textarea>
    </div>
    <button type="submit" class="btn btn-default">Update</button>
  </form>
</div>
<%- include('layout/footer');%>
